{{!-- ************ wheel info ************ --}}
<header>

  <h1>{{selectedWheel.title}}</h1>

  <p class="wheel-descrition">{{selectedWheel.description}}</p>

  <div class="wheel-options-container">
    {{!-- Update wheel --}}
    <a href="/wheel/update/{{selectedWheel._id}}">
      <button>Update Wheel</button>
    </a>
    {{!-- delete wheel --}}
    <form action="/wheel/{{selectedWheel._id}}?_method=DELETE" method="POST">
      <input type="submit" value="Delete Wheel">
    </form>

  </div>

</header>

{{!-- ************** Member section ******************** --}}
<div class="member-container">
  {{#each members}}
  <div class="member-each-container">
    <div class="member-title-container">
      <a href="/member/{{_id}}">
        <div class="member-pic-sm-container">
          <img src="{{picture}}" alt="{{name}}'s Profile Pic" class="member-pic-sm" />
        </div>
      </a>
      <a href="/member/{{_id}}">
        <h4>{{name}}</h4>
      </a>
    </div>


    {{!-- Update --}}
    <a href="/Member/update/{{_id}}">
      <button>Update {{name}}'s Info</button>
    </a>
    {{!-- Delete --}}
    <form action="/member/{{_id}}?_method=DELETE" method="POST">
      <input type="image" src="../../public/images/delete-icon.jpeg" alt="Delete Form" />
    </form>

    {{!-- ######## CHORE LIST FOR EACH MEMBER #########--}}
    <ul class="chores-container">
      {{#each chores}}
      {{#if completed}}
      <li class="chore-done">{{chore}}</li>
      {{else}}
      <div class="chore-item-container">
        <form action="/chore/udate/completed/{{_id}}?_method=PUT" method="POST">
          <input type="submit" class="check-box" value="done?">
        </form>
        <li class="chore">{{chore}}</li>
      </div>
      {{/if}}





      {{/each}}
    </ul>
  </div>
  {{/each}}
</div>

{{!-- Create member --}}
<div class="create-member-container">
  <a href="/member/create/{{selectedWheel._id}}">
    <button>Add Member</button>
  </a>
</div>