<h1>Update a Chore Wheel</h1>

<form action="/wheel/{{selectedWheel._id}}?_method=PUT" method="POST">
  <input type="text" name="title" placeholder="title" value="{{selectedWheel.title}}" />
  <input type="text" name="description" placeholder="description" value="{{selectedWheel.description}}" />
  <input type="submit" value="Update" />
</form>