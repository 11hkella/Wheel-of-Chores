<header>
  <div class="home-button-container">
    <a href="/wheel/{{selectedMember.wheelId}}">
      <p class="home-button">WHEEL <span class="span-home-button">of</span>
        <br />
        <span class="chores-home-button">CHORES</span></p>
    </a>
  </div>

  <div class="page-title">
    <h1>{{selectedMember.name}}</h1>
    <div class="member-pic-big-container">
      <img src="{{selectedMember.picture}}" alt="profile image" class="member-pic-big" />
    </div>


    <a href="/member/update/{{selectedMember._id}}">
      <button>Update</button>
    </a>

    <form action="/member/{{selectedMember._id}}?_method=DELETE" method="POST">
      <input type="image" src="/images/delete-icon.jpeg" alt="Submit">
    </form>

    <a href="/wheel/{{selectedMember.wheelId}}">
      <button>Back to {{selectedMember.name}}'s wheel</button>
    </a>
  </div>
</header>

<main>
  {{!-- *********** Chores List ************** --}}
  <h2>Chores</h2>
  {{#each chores}}
  <h4>{{chore}}</h4>
  <p>Must complete within {{frequency}} days from {{dateCreated}}.</p>
  {{#if completed}}
  <p class="chore-status">Status: finished</p>
  {{else}}
  <p class="chore-status">Status: in progress</p>
  {{/if}}
  {{!-- Update Chore --}}
  <a href="/chore/update/{{_id}}">
    <button>Update this chore</button>
  </a>
  {{!-- Delete Chore --}}
  <form action="/chore/{{_id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete this chore">
  </form>
  {{/each}}
  <br />
  {{!-- Create Chore --}}
  <a href="/chore/create/{{selectedMember._id}}">
    <button>Add Chore</button>
  </a>
</main>